#       run ranger goodbye URxvt I am too stupid to config you
#       so I will always stick with konsole or xfce4-terminal
bindsym $super+r exec konsole -name float -e 'ranger'







# start feh on reboot
exec --no-startup-id feh --randomize --bg-scale ~/Pictures/Wallpapers/*

# call feh with the window size of 1280x720
bindsym $super+b exec feh -g 1280x720 ~/Pictures/Wallpapers

#       I am thai so to be able to type thing in thai is very important! เข้าใจกันนะ
exec_always "setxkbmap -layout us,th -option 'grp:alt_shift_toggle'"

# gaps between window
gaps inner 4
